mixin formGroup(options)
  - var additionalClass = options.additionalClass;
  - var inputAdditionalClass = options.inputAdditionalClass;
  - var placeholderText = options.placeholderText;
  - var typeText = options.typeText || 'text'; //-- text || checkbox 
  - var labelText = options.labelText;
  - var error = options.error;
  - var selectMultiple = options.selectMultiple || false;

  - var fullClass = 'formgroup--' + typeText + ' ' + additionalClass;
  .formgroup(class=fullClass)
    if typeText == 'select'
      label
        if selectMultiple
          v-select( v-model="selected" multiple :options="options")
        else
          v-select( v-model="selected" :options="options")
        span.formgroup__label !{labelText}
      span.formgroup__error !{error}
    else
      label
        input.formgroup__input(type=typeText, class= inputAdditionalClass, placeholder=placeholderText)
        if typeText == 'checkbox'
          i.formgroup--checkbox.icon.icon-checkbox
          i.formgroup--checkbox.icon.icon-checkbox--checked
        span.formgroup__label !{labelText}
      span.formgroup__error !{error}

mixin singleInputForm(options)
  - var formTitle = options.formTitle;
  - var placeholderText = options.placeholderText;
  - var waittingText = options.waittingText;
  - var completeMessage = options.completeMessage;


  .single-input-form
    form.single-input-form__form
      // #1 hover button
      div
        p.single-input-form__text= formTitle
      // #2 text input
      div
        // Label to trigger #submit
        label.submit-icon(for='submit')
          i.fa.fa-chevron-right
        input.single-input-form__input.single-input-form__text(type='text', placeholder=placeholderText, autocomplete='off')
        // hidden submit button
        input#submit(type='submit')
      // #3 loading message
      div
        p.single-input-form__text.loader= waittingText
      // #4 success message
      div
        // reset/retry button
        span.reset-icon
          i.fa.fa-refresh
        p.single-input-form__text= completeMessage
